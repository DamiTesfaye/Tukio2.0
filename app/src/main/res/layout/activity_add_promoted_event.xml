<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".View.Activities.AddPromotedEventActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">

                <ImageButton android:layout_width="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentStart="true"
                             android:id="@+id/add_promoted_event_close_activity"
                             app:srcCompat="@drawable/ic_back"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:textSize="20sp"
                          android:layout_centerVertical="true"
                          android:layout_marginStart="30dp"
                          android:text="Let It Trend!"
                          android:layout_toEndOf="@id/add_promoted_event_close_activity"
                          android:layout_height="wrap_content"/>


                <ImageButton android:layout_width="wrap_content"
                             android:layout_centerVertical="true"
                             android:id="@+id/add_promoted_event_btn"
                             android:layout_alignParentEnd="true"
                             android:layout_marginEnd="10dp"
                             app:srcCompat="@drawable/ic_check_black_24dp"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             android:layout_height="wrap_content"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">

        <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent" >

            <TextView android:layout_width="wrap_content"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_marginTop="10dp"
                      android:text="@string/mandatory_details"
                      android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:hint="@string/event_title"
                          android:backgroundTint="@color/colorAccent"
                          android:id="@+id/add_promoted_event_event_title_et"
                          android:textSize="15sp"
                          android:fontFamily="@font/font_family"
                          android:inputType="textMultiLine"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:hint="@string/event_description"
                          android:backgroundTint="@color/colorAccent"
                          android:id="@+id/add_promoted_event_event_desc_et"
                          android:textSize="15sp"
                          android:fontFamily="@font/font_family"
                          android:inputType="textMultiLine"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:layout_height="60dp">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:animateLayoutChanges="true"
                              android:id="@+id/add_promoted_event_event_poster_layout"
                              android:orientation="horizontal"
                              android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:textColor="@android:color/black"
                              android:text=""
                              android:background="?attr/selectableItemBackground"
                              android:id="@+id/add_promoted_event_event_poster_hint_tv"
                              android:textSize="15sp"
                              android:hint="@string/add_the_event_image_poster"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



                <ImageButton
                        android:layout_width="50dp"
                        android:layout_weight="0"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/add_promoted_event_event_poster_fab"
                        app:srcCompat="@drawable/ic_camera_black_24dp"
                        android:layout_margin="5dp"
                        android:tint="@android:color/black"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="10dp"
                          android:layout_height="60dp">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="60dp">

                    <EditText android:layout_width="match_parent"
                              android:hint="@string/event_location"
                              android:id="@+id/add_promoted_event_event_location_et"
                              android:textSize="15sp"
                              android:fontFamily="@font/font_family"
                              android:backgroundTint="@color/colorAccent"
                              android:textColor="@android:color/black"
                              android:layout_height="match_parent"/>

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_weight="0"
                        android:tint="@android:color/black"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/add_promoted_event_event_location_fab"
                        app:srcCompat="@drawable/ic_add_location"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp"
                          android:layout_height="60dp">

                <TextView android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_gravity="center_vertical"
                          android:textColor="@android:color/black"
                          android:text=""
                          android:background="?attr/selectableItemBackground"
                          android:id="@+id/add_promoted_event_event_date_tv"
                          android:textSize="15sp"
                          android:hint="@string/add_event_date"
                          android:layout_height="wrap_content"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_weight="0"
                        android:tint="@android:color/black"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/add_promoted_event_event_date_fab"
                        app:srcCompat="@drawable/ic_date"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginBottom="5dp"
                          android:layout_marginTop="20dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:textColor="@android:color/darker_gray"
                          android:layout_margin="2dp"
                          android:text="@string/add_tags_manadatory"
                          android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/promoted_adding_tags_layout"
                        android:layout_height="100dp"/>


                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        app:fabSize="mini"
                        android:id="@+id/add_promoted_event_event_tags_fab"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="@string/optional_details"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="60dp">

                <EditText android:layout_width="match_parent"
                          android:hint="@string/dress_code"
                          android:fontFamily="@font/font_family"
                          android:textSize="15sp"
                          android:backgroundTint="@color/colorAccent"
                          android:id="@+id/add_promoted_event_event_dresscode_et"
                          android:textColor="@android:color/black"
                          android:layout_height="match_parent"/>

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp">

                <EditText android:layout_width="match_parent"
                          android:hint="@string/registration_link_optional"
                          android:textSize="15sp"
                          android:fontFamily="@font/font_family"
                          android:id="@+id/add_promoted_event_event_reg_link_et"
                          android:backgroundTint="@color/colorAccent"
                          android:textColor="@android:color/black"
                          android:layout_height="match_parent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp">

                <EditText android:layout_width="match_parent"
                          android:hint="@string/link_to_buy_tickets_optional"
                          android:textSize="15sp"
                          android:fontFamily="@font/font_family"
                          android:backgroundTint="@color/colorAccent"
                          android:id="@+id/add_promoted_event_event_ticket_link_et"
                          android:textColor="@android:color/black"
                          android:layout_height="match_parent"/>

            </android.support.design.widget.TextInputLayout>



            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:textColor="@android:color/darker_gray"
                          android:layout_marginTop="5dp"
                          android:text="@string/click_the_buttons_below_to_add_special_guests_optional"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:id="@+id/promoted_adding_speakers_layout"
                              android:animateLayoutChanges="true"
                              android:layout_height="wrap_content"/>
                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        app:fabSize="mini"
                        android:id="@+id/add_promoted_event_event_guests_fab"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>



            <Button android:layout_width="match_parent"
                    android:id="@+id/add_promoted_event_event_add_event_aux_button"
                    android:text="ADD EVENT"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:background="@drawable/buttonbg"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="30dp"/>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>