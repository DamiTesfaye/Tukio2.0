<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/placeholder_event"
                android:scaleType="centerCrop"
                android:id="@+id/event_details_event_image"
                android:layout_height="400dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/black_trans_to_white_gradient"
                android:layout_height="match_parent"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton android:layout_width="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_alignParentStart="true"
                         android:layout_margin="10dp"
                         android:tint="@android:color/white"
                         android:id="@+id/event_details_back"
                         app:srcCompat="@drawable/ic_back"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                         android:layout_alignParentEnd="true"
                         android:layout_alignParentTop="true"
                         android:layout_margin="10dp"
                         android:id="@+id/event_details_share_btn"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         app:srcCompat="@drawable/ic_share_new"
                         android:layout_height="20dp"/>

            <ImageView android:layout_width="20dp"
                         android:layout_alignParentTop="true"
                         android:layout_marginEnd="2dp"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:layout_toStartOf="@id/event_details_share_btn"
                         app:srcCompat="@drawable/ic_reminder"
                         android:layout_marginStart="10dp"
                         android:id="@+id/event_details_remind_btn"
                         android:layout_marginTop="10dp"
                         android:layout_height="20dp"/>

            <ImageView android:layout_width="20dp"
                         android:layout_alignParentTop="true"
                         android:tint="@color/colorPrimary"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         app:srcCompat="@drawable/ic_comment"
                         android:layout_toStartOf="@id/event_details_remind_btn"
                         android:layout_marginTop="10dp"
                         android:layout_marginEnd="2dp"
                         android:layout_height="20dp"/>

            <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbarSize="5dp"
                    android:layout_marginTop="70dp"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp"
                            android:layout_marginTop="50dp"
                            app:cardPreventCornerOverlap="true"
                            android:id="@+id/event_details_primary_details"
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_height="wrap_content">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_gravity="center_horizontal"
                                      android:gravity="center"
                                      android:layout_marginTop="5dp"
                                      android:textColor="@color/colorAccent"
                                      android:textSize="15sp"
                                      android:text="Primary Details"
                                      android:layout_height="wrap_content"/>

                            <TextView android:layout_width="wrap_content"
                                      android:textSize="20sp"
                                      android:layout_gravity="center_horizontal"
                                      android:gravity="center"
                                      android:layout_marginTop="10dp"
                                      android:textStyle="bold"
                                      android:text="Tech Inspire: A DSC Event"
                                      android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent"
                                          android:padding="5dp"
                                          android:layout_marginTop="5dp"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">

                                <ImageView android:layout_width="20dp"
                                           app:srcCompat="@drawable/ic_placeholder"
                                           android:tint="@android:color/black"
                                           android:layout_gravity="center_vertical"
                                           android:layout_height="20dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:textSize="15sp"
                                          android:layout_marginStart="10dp"
                                          android:text="Block Of Classrooms, Federal University Of Technology, Lagos."
                                          android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout android:layout_width="match_parent"
                                          android:padding="7dp"
                                          android:layout_marginTop="5dp"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">

                                <ImageView android:layout_width="20dp"
                                           app:srcCompat="@drawable/ic_date"
                                           android:tint="@android:color/black"
                                           android:layout_gravity="center_vertical"
                                           android:layout_height="20dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:textSize="15sp"
                                          android:layout_marginStart="10dp"
                                          android:text="25th of December, 2019"
                                          android:layout_height="wrap_content"/>

                                <RelativeLayout android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                    <ImageView android:layout_width="25dp"
                                                 android:layout_gravity="end"
                                                 android:layout_alignParentEnd="true"
                                                 android:background="?attr/selectableItemBackgroundBorderless"
                                                 app:srcCompat="@drawable/ic_reminder"
                                                 android:tint="@android:color/black"
                                                 android:layout_height="25dp"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="vertical"
                                      android:padding="5dp"
                                      android:layout_height="wrap_content">

                            <TextView android:layout_width="wrap_content"
                                      android:layout_gravity="center_horizontal"
                                      android:gravity="center"
                                      android:textSize="15sp"
                                      android:layout_marginTop="5dp"
                                      android:text="Supplementary Details"
                                      android:textColor="@color/colorAccent"
                                      android:layout_height="wrap_content"/>

                            <TextView android:layout_width="wrap_content"
                                      android:textSize="12sp"
                                      android:layout_marginTop="5dp"
                                      android:text="Event Description"
                                      android:textStyle="bold"
                                      android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent"
                                          android:padding="5dp"
                                          android:layout_marginTop="5dp"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">

                                <ImageView android:layout_width="20dp"
                                           app:srcCompat="@drawable/ic_description"
                                           android:tint="@android:color/black"
                                           android:layout_gravity="center_vertical"
                                           android:layout_height="20dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:textSize="15sp"
                                          android:layout_marginStart="10dp"
                                          android:text="An event aimed at inspiring the tech newbies and stregthening the code veterans."
                                          android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView android:layout_width="wrap_content"
                                      android:textSize="12sp"
                                      android:layout_marginTop="5dp"
                                      android:text="Dress Code"
                                      android:textStyle="bold"
                                      android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent"
                                          android:padding="5dp"
                                          android:layout_marginTop="5dp"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">

                                <ImageView android:layout_width="20dp"
                                           app:srcCompat="@drawable/ic_tie"
                                           android:tint="@android:color/black"
                                           android:layout_gravity="center_vertical"
                                           android:layout_height="20dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:textSize="15sp"
                                          android:layout_marginStart="10dp"
                                          android:text="Blue Trousers, White Shirt and Red Caps"
                                          android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView android:layout_width="wrap_content"
                                      android:textSize="12sp"
                                      android:layout_marginTop="10dp"
                                      android:text="Registration Link"
                                      android:textStyle="bold"
                                      android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent"
                                          android:padding="5dp"
                                          android:layout_marginTop="5dp"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">

                                <ImageView android:layout_width="20dp"
                                           app:srcCompat="@drawable/ic_link"
                                           android:tint="@android:color/black"
                                           android:layout_gravity="center_vertical"
                                           android:layout_height="20dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:textSize="15sp"
                                          android:textColor="@color/colorAccent"
                                          android:layout_marginStart="10dp"
                                          android:text="http://bit.ly/registerTheFuckHere"
                                          android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView android:layout_width="wrap_content"
                                      android:textSize="12sp"
                                      android:layout_marginTop="10dp"
                                      android:text="Special Guests"
                                      android:textStyle="bold"
                                      android:layout_height="wrap_content"/>

                            <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="70dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <Button android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/buttonbg_white"
                            android:text="GET TICKETS"
                            android:textColor="@color/colorAccent"
                            android:layout_marginBottom="10dp"
                            android:layout_height="40dp"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>