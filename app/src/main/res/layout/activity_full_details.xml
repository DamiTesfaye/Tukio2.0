<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".View.Activities.FullDetails"
>

    <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll"
                    app:title=""
                    app:contentScrim="@color/colorAccent"
                    android:layout_height="match_parent">

                <ImageView android:layout_width="match_parent"
                           android:src="@drawable/eventify_placeholder"
                           android:foreground="#6e000000"
                           android:scaleType="centerCrop"
                           android:id="@+id/activity_full_details_event_poster"
                           android:layout_height="match_parent"/>

                <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        app:layout_collapseMode="pin"
                        android:layout_height="?attr/actionBarSize">

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                        <ImageButton android:layout_width="wrap_content"
                                     android:id="@+id/activity_full_details_close_image_btn"
                                     android:layout_alignParentStart="true"
                                     android:layout_marginEnd="20dp"
                                     android:layout_centerVertical="true"
                                     android:tint="@color/colorPrimary"
                                     app:srcCompat="@drawable/ic_close_black_24dp"
                                     android:background="@android:color/transparent"
                                     android:layout_height="match_parent"/>

                        <TextView android:layout_width="wrap_content"
                                  android:gravity="center"
                                  android:textColor="@color/colorPrimary"
                                  android:layout_centerVertical="true"
                                  android:textSize="22sp"
                                  android:text="@string/full_details"
                                  android:layout_toEndOf="@+id/activity_full_details_close_image_btn"
                                  android:layout_height="wrap_content"/>




                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">



                    <TextView android:layout_width="wrap_content"
                              android:padding="5dp"
                              android:text=""
                              android:textSize="22sp"
                              android:textColor="@color/colorPrimary"
                              android:layout_centerVertical="true"
                              android:layout_alignParentStart="true"
                              android:textStyle="bold"
                              android:id="@+id/activity_full_details_event_title_tv"
                              android:gravity="center_vertical"
                              android:drawableStart="@drawable/ic_title"
                              android:drawablePadding="10dp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:padding="5dp"
                              android:textColor="@color/colorPrimary"
                              android:textSize="14sp"
                              android:text=""
                              android:textStyle="normal"
                              android:id="@+id/activity_full_details_event_time_tv"
                              android:gravity="center_vertical"
                              android:drawableStart="@drawable/ic_time"
                              android:drawablePadding="10dp"
                              android:layout_below="@id/activity_full_details_event_title_tv"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:padding="5dp"
                              android:text=""
                              android:textSize="14sp"
                              android:textColor="@color/colorPrimary"
                              android:textStyle="normal"
                              android:layout_below="@id/activity_full_details_event_time_tv"
                              android:id="@+id/activity_full_details_event_location_tv"
                              android:gravity="center_vertical"
                              android:drawableStart="@drawable/ic_maps2"
                              android:drawablePadding="10dp"
                              android:layout_height="wrap_content"/>


                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:visibility="visible"
                android:background="@color/colorPrimary"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="end"
                              android:layout_height="wrap_content">
    
                    <ImageButton android:layout_width="wrap_content"
                                 android:background="?attr/selectableItemBackgroundBorderless"
                                 android:id="@+id/activity_full_details_seen_btn"
                                 android:layout_marginTop="15dp"
                                 android:visibility="gone"
                                 android:layout_marginBottom="10dp"
                                 android:layout_marginEnd="7dp"
                                 app:srcCompat="@drawable/ic_touch"
                                 android:layout_height="wrap_content"/>
    
                    <TextView android:layout_width="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_marginTop="7dp"
                              android:visibility="gone"
                              android:text="0"
                              android:layout_marginBottom="10dp"
                              android:id="@+id/activity_full_details_seen_count"
                              android:layout_marginEnd="10dp"
                              android:layout_height="wrap_content"/>

                    <ImageButton android:layout_width="40dp"
                                 android:background="?attr/selectableItemBackgroundBorderless"
                                 android:id="@+id/activity_full_details_comment_button"
                                 android:layout_marginTop="7dp"
                                 android:layout_marginBottom="10dp"
                                 android:layout_marginEnd="3dp"
                                 app:srcCompat="@drawable/ic_comment"
                                 android:layout_height="40dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_marginTop="7dp"
                              android:layout_marginBottom="10dp"
                              android:layout_marginEnd="5dp"
                              android:id="@+id/activity_full_details_comment_count"
                              android:layout_height="40dp"/>

                    <ImageButton android:layout_width="40dp"
                                 android:background="?attr/selectableItemBackgroundBorderless"
                                 android:id="@+id/activity_full_details_going_btn"
                                 android:layout_marginTop="7dp"
                                 android:layout_marginBottom="10dp"
                                 android:layout_marginEnd="3dp"
                                 app:srcCompat="@drawable/ic_going"
                                 android:layout_height="40dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_marginTop="7dp"
                              android:layout_marginBottom="10dp"
                              android:layout_marginEnd="5dp"
                              android:id="@+id/activity_full_details_going_count"
                              android:layout_height="40dp"/>

                </LinearLayout>


                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:textSize="12sp"
                          android:textStyle="normal"
                          android:text="@string/description"
                          android:layout_marginTop="10dp"
                          android:id="@+id/activity_full_details_event_desc_label"
                          android:gravity="center_vertical"
                          android:drawableStart="@drawable/ic_description"
                          android:drawablePadding="10dp"
                          android:layout_height="wrap_content"/>


                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:text=""
                          android:textSize="17sp"
                          android:layout_marginBottom="5dp"
                          android:layout_marginStart="10dp"
                          android:textStyle="normal"
                          android:id="@+id/activity_full_details_event_desc_tv"
                          android:gravity="center_vertical"
                          android:layout_height="wrap_content"/>

                <View android:layout_width="match_parent"
                      android:layout_margin="3dp"
                      android:background="@android:color/darker_gray"
                      android:layout_height="1dp"/>

                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:textSize="12sp"
                          android:text="@string/dress_code"
                          android:textStyle="normal"
                          android:layout_marginTop="10dp"
                          android:id="@+id/activity_full_details_event_dress_code_label"
                          android:gravity="center_vertical"
                          app:layout_constraintTop_toBottomOf="@id/activity_full_details_event_desc_tv"
                          android:drawableStart="@drawable/ic_tie"
                          android:drawablePadding="10dp"
                          android:layout_height="wrap_content"/>


                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:textSize="17sp"
                          android:layout_marginBottom="5dp"
                          android:layout_marginStart="10dp"
                          android:text=""
                          android:textStyle="normal"
                          android:id="@+id/activity_full_details_event_dress_code_tv"
                          android:gravity="start"
                          android:layout_height="wrap_content"/>

                <View android:layout_width="match_parent"
                      android:layout_margin="3dp"
                      android:background="@android:color/darker_gray"
                      android:layout_height="1dp"/>

                <TextView android:layout_width="wrap_content"
                          android:drawableStart="@drawable/ic_guest_speaker"
                          android:drawablePadding="10dp"
                          android:layout_marginTop="10dp"
                          android:padding="5dp"
                          app:layout_constraintTop_toBottomOf="@id/activity_full_details_event_dress_code_tv"
                          android:id="@+id/activity_full_details_event_guest_speakers_label"
                          android:text="@string/guests_invitees"
                          android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/activity_full_details_event_guest_speakers"
                        app:layout_constraintTop_toBottomOf="@id/activity_full_details_event_guest_speakers_label"
                        android:layout_height="wrap_content"/>

                <View android:layout_width="match_parent"
                      android:layout_margin="3dp"
                      android:background="@android:color/darker_gray"
                      android:layout_height="1dp"/>

                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:textSize="12sp"
                          android:text="@string/registration_link"
                          android:textStyle="normal"
                          android:id="@+id/activity_full_details_event_reg_link_label"
                          android:gravity="center_vertical"
                          android:drawableStart="@drawable/ic_link"
                          android:layout_marginTop="10dp"
                          android:drawablePadding="10dp"
                          android:layout_height="30dp"/>

                <TextView android:layout_width="match_parent"
                          android:paddingTop="5dp"
                          android:layout_marginStart="10dp"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="10dp"
                          android:paddingBottom="5dp"
                          android:paddingStart="10dp"
                          android:paddingEnd="10dp"
                          android:textSize="17sp"
                          android:background="?attr/selectableItemBackground"
                          android:textColor="@color/colorAccent"
                          android:id="@+id/activity_full_details_event_reg_link_tv"
                          android:gravity="center_vertical"
                          app:layout_constraintTop_toBottomOf="@+id/activity_full_details_event_guest_speakers"
                          android:layout_height="wrap_content"/>

                <View android:layout_width="match_parent"
                      android:layout_margin="3dp"
                      android:background="@android:color/darker_gray"
                      android:layout_height="1dp"/>

                <TextView android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:layout_marginTop="7dp"
                          android:textSize="12sp"
                          android:text="@string/ticket_link"
                          android:textStyle="normal"
                          android:id="@+id/activity_full_details_event_ticket_link_label"
                          android:gravity="center_vertical"
                          android:drawableStart="@drawable/ic_ticket"
                          android:drawablePadding="10dp"
                          android:layout_height="30dp"/>

                <TextView android:layout_width="match_parent"
                          android:paddingTop="5dp"
                          android:paddingBottom="5dp"
                          android:layout_marginStart="10dp"
                          android:layout_marginTop="5dp"
                          android:paddingStart="10dp"
                          android:paddingEnd="10dp"
                          android:textColor="@color/colorAccent"
                          android:textSize="17sp"
                          android:textStyle="normal"
                          android:background="?attr/selectableItemBackgroundBorderless"
                          android:id="@+id/activity_full_details_event_ticket_link_tv"
                          android:gravity="center_vertical"
                          android:layout_marginBottom="30dp"
                          android:layout_height="wrap_content"/>

                <View android:layout_width="match_parent"
                      android:layout_margin="3dp"
                      android:background="@android:color/darker_gray"
                      android:layout_height="1dp"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
