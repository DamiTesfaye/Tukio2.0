<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".View.Activities.HomeActivity">

	<FrameLayout
            android:layout_width="match_parent"
            android:paddingBottom="?attr/actionBarSize"
            android:id="@+id/home_frame_layout"
            android:layout_height="match_parent"/>


    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent">

		<com.google.android.material.bottomnavigation.BottomNavigationView
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="@color/colorPrimary"
				android:layout_gravity="bottom"
				app:itemIconTint="@color/bottom_bar_bg"
				app:itemTextColor="@android:color/black"
				app:menu="@menu/main_menu"
				app:labelVisibilityMode="unlabeled"
				app:elevation="5dp"
				android:id="@+id/home_bottom_nav_bar"

		/>

		<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				app:fabSize="normal"
				android:id="@+id/home_fab"
				android:layout_gravity="bottom|end"
				android:layout_marginBottom="70dp"
				app:srcCompat="@drawable/ic_add_black_24dp"
				android:layout_marginEnd="20dp"
				android:layout_height="wrap_content"/>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

	<include
			layout="@layout/profile_options_bottomsheet"
			app:layout_behavior="@string/bottom_sheet_behavior"
			android:id="@+id/profile_options_bottomsheet"/>

	<include
			layout="@layout/share_event_bottomsheet"
			app:layout_behavior="@string/bottom_sheet_behavior"
			android:id="@+id/share_event_bottomsheet"/>


	<RelativeLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                    android:visibility="invisible"
                  android:padding="10dp"
                    android:id="@+id/loading_more_layout"
                    android:elevation="5dp"
                  android:layout_gravity="center_horizontal|bottom"
                  android:layout_marginBottom="70dp"
                  android:background="@drawable/buttonbg"
                  android:layout_height="wrap_content">
        
        <ProgressBar android:layout_width="35dp"
                     android:id="@+id/loading_more"
                     android:indeterminateTint="@color/colorPrimary"
                     android:layout_height="35dp"/>
        
        <TextView android:layout_width="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textSize="15sp"
                  android:layout_toEndOf="@id/loading_more"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="15dp"
                  android:textColor="@color/colorPrimary"
                  android:text="Loading more"
                  android:id="@+id/loading_more_text"
                  android:layout_height="wrap_content"/>
        
    </RelativeLayout>


    
	
	</androidx.coordinatorlayout.widget.CoordinatorLayout>

