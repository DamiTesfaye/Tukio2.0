<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".View.Activities.ProfileActivity2">
    
    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:id="@+id/profileii_app_bar"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                android:layout_height="wrap_content">
    
        <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                           
                                           android:background="@color/colorPrimary"
                                           android:id="@+id/profileii_toolbar"
                                           android:layout_height="?attr/actionBarSize">
    
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
        
            <ImageButton android:layout_width="wrap_content"
                         android:layout_alignParentStart="true"
                         android:layout_centerVertical="true"
                         android:id="@+id/profileii_close"
                         android:contentDescription="@string/go_back"
                         app:srcCompat="@drawable/ic_back"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:layout_height="wrap_content"/>
        
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="20dp"
                      android:textSize="23sp"
                      android:text="@string/profile"
                      android:layout_toEndOf="@id/profileii_close"
                      android:layout_height="wrap_content"/>
        
            <ImageButton android:layout_width="wrap_content"
                         android:layout_alignParentEnd="true"
                         android:layout_marginEnd="20dp"
                         android:contentDescription="@string/sign_out"
                         android:id="@+id/profileii_signout"
                         app:srcCompat="@drawable/ic_sign_out"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:layout_centerVertical="true"
                         android:layout_height="wrap_content"/>
    
        </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        
    </android.support.design.widget.AppBarLayout>
    
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/profileii_app_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
        
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">
    
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:animateLayoutChanges="true"
                    android:id="@+id/profileii_userimage"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/placeholder"
                    android:layout_height="50dp"/>
    
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    app:fabSize="mini"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/profileii_select_image"
                    app:layout_constraintTop_toTopOf="@id/profileii_userimage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/profileii_userimage"
                    app:srcCompat="@drawable/ic_camera_black_24dp"
                    android:layout_height="wrap_content"/>
    
            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/profileii_userimage"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="21sp"
                      android:textStyle="bold"
                      android:id="@+id/profileii_username"
                      android:textColor="@android:color/black"
                      android:text=""
                      android:layout_height="wrap_content"/>
    
            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/profileii_username"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="7dp"
                      android:textSize="17sp"
                      android:id="@+id/profileii_userbio"
                      android:textColor="@android:color/black"
                      android:text=""
                      android:layout_height="wrap_content"/>
            
            <ImageButton android:layout_width="wrap_content"
                         app:layout_constraintTop_toTopOf="@id/profileii_username"
                         app:layout_constraintBottom_toBottomOf="@id/profileii_userbio"
                         app:layout_constraintEnd_toEndOf="parent"
                         android:layout_marginEnd="20dp"
                         android:id="@+id/profileii_edit_username_bio"
                         android:contentDescription="@string/edit_username_and_bio"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         app:srcCompat="@drawable/ic_edit"
                         android:tint="@android:color/black"
                         android:layout_height="wrap_content"/>
    
            <TextView android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@id/profileii_userbio"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:gravity="center"
                      android:layout_marginTop="100dp"
                      android:background="@drawable/buttonoutline"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:paddingStart="10dp"
                      android:paddingEnd="5dp"
                      android:textSize="17sp"
                      android:foreground="?attr/selectableItemBackground"
                      android:id="@+id/profileii_edit_interests"
                      android:textColor="@android:color/black"
                      android:text="@string/modify_interests"
                      android:layout_height="wrap_content"/>
    
            <TextView android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@id/profileii_edit_interests"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:gravity="center"
                      android:layout_marginTop="20dp"
                      android:background="@drawable/buttonoutline"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:paddingStart="10dp"
                      android:foreground="?attr/selectableItemBackground"
                      android:paddingEnd="5dp"
                      android:textSize="17sp"
                      android:id="@+id/profileii_view_posted_events"
                      android:textColor="@android:color/black"
                      android:text="@string/view_posted_events"
                      android:layout_height="wrap_content"/>
    
            <TextView android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@id/profileii_view_posted_events"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:gravity="center"
                      android:foreground="?attr/selectableItemBackground"
                      android:layout_marginTop="20dp"
                      android:background="@drawable/buttonoutline"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:paddingStart="10dp"
                      android:paddingEnd="5dp"
                      android:textSize="17sp"
                      android:id="@+id/profileii_view_promoted_events"
                      android:textColor="@android:color/black"
                      android:text="@string/view_promoted_events"
                      android:layout_height="wrap_content"/>
            
            
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="70dp"
                    app:srcCompat="@drawable/ic_check_black_24dp"
                    android:tint="@color/colorPrimary"
                    app:fabCustomSize="70dp"
                    android:id="@+id/profileii_save_user_details"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintTop_toBottomOf="@id/profileii_view_promoted_events"
                    android:layout_height="wrap_content"/>
            
        </android.support.constraint.ConstraintLayout>
        
        
        
    </android.support.v4.widget.NestedScrollView>
    
    
    
    

</android.support.design.widget.CoordinatorLayout>