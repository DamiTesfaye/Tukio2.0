<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Activities.TagActivity">

    <android.support.v7.widget.Toolbar
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/tag_activity_toolbar"
            android:background="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">

            <ImageButton android:layout_width="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/tag_activity_close"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         app:srcCompat="@drawable/ic_close_black_24dp"
                         android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_gravity="center_vertical"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:id="@+id/tag_activity_title"
                      android:layout_height="wrap_content"/>

        </LinearLayout>



    </android.support.v7.widget.Toolbar>

    <ProgressBar android:layout_width="60dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:id="@+id/tag_activity_progress_bar"
                 android:visibility="gone"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_height="60dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tag_activity_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_activity_toolbar"
            android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>