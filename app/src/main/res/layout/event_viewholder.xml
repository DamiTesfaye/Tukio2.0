<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">



        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:src="@drawable/placeholder"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"

                android:id="@+id/explore_viewholder_userimage"
                android:layout_marginEnd="20dp"/>

        <TextView android:layout_width="wrap_content"
                  android:background="@drawable/loading_text_drawable"
                  android:text=""
                  android:minWidth="50dp"
                  android:layout_marginStart="7dp"
                  android:textSize="15sp"
                  app:layout_constraintTop_toTopOf="@id/explore_viewholder_userimage"
                  app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_userimage"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/explore_viewholder_userimage"
                  android:id="@+id/explore_viewholder_username"
                  android:layout_marginEnd="7dp"
                  android:layout_gravity="center_vertical"
        />

        <TextView android:layout_width="wrap_content"
                  android:textColor="@android:color/darker_gray"
                  android:layout_gravity="center_vertical"
                  android:id="@+id/explore_viewholder_post_time"
                  app:layout_constraintStart_toEndOf="@id/explore_viewholder_username"
                  app:layout_constraintTop_toTopOf="@id/explore_viewholder_username"
                  app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_username"
                  android:layout_marginStart="10dp"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>

   

    <ImageButton android:layout_width="30dp"
                 app:layout_constraintTop_toTopOf="@id/explore_viewholder_userimage"
                 app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_userimage"
                 app:layout_constraintEnd_toStartOf="@id/explore_viewholder_share_event"
                 android:layout_marginEnd="7dp"
                 android:contentDescription="@string/check_event_s_updates"
                 android:id="@+id/explore_viewholder_update_btn"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:srcCompat="@drawable/ic_notification"

                 android:layout_height="30dp"/>

    <ImageButton android:layout_width="30dp"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:srcCompat="@drawable/ic_share"
                 android:layout_alignParentEnd="true"
                 app:layout_constraintTop_toTopOf="@id/explore_viewholder_userimage"
                 app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_userimage"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:id="@+id/explore_viewholder_share_event"
                 android:layout_height="30dp" android:contentDescription="@string/check_more_options"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="12dp"

                    android:id="@+id/event_poster_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintTop_toBottomOf="@id/explore_viewholder_userimage"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="5dp"

                    app:cardPreventCornerOverlap="true"
                    android:layout_height="350dp">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">

                     <ImageView android:layout_width="match_parent"
                               android:scaleType="centerCrop"
                                app:srcCompat= "@drawable/eventify_placeholder"
                                android:layout_centerInParent="true"
                                android:id="@+id/explore_viewholder_event_poster"
                               android:contentDescription="@string/event_s_image"
                               android:layout_height="match_parent"/>
    
                    <TextView android:layout_width="match_parent"
                              android:background="#B0000000"
                              android:text="@string/promoted"
                              android:textSize="15sp"
                              android:gravity="center_vertical|end"
                              android:layout_alignParentBottom="true"
                              android:layout_alignParentEnd="true"
                              android:textColor="@color/colorPrimary"
                              android:visibility="gone"
                              android:id="@+id/explore_viewholder_promoted_tag"
                              android:paddingStart="10dp"
                              android:paddingEnd="15dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp"
                              android:layout_height="50dp"/>

                </RelativeLayout>



            </android.support.v7.widget.CardView>
    
    <ImageButton android:layout_width="wrap_content"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:id="@+id/explore_viewholder_seen_btn"
                 android:layout_marginTop="15dp"
                 android:visibility="gone"
                 android:layout_marginBottom="10dp"
                 app:layout_constraintTop_toBottomOf="@id/event_poster_container"
                 app:layout_constraintEnd_toStartOf="@id/explore_viewholder_seen_count"
                 android:layout_marginEnd="7dp"
                 app:srcCompat="@drawable/ic_touch"
                 android:layout_height="wrap_content"/>
    
    <TextView android:layout_width="wrap_content"
              android:gravity="center_vertical"
              android:layout_marginTop="7dp"
              android:visibility="gone"
              android:text="0"
              android:layout_marginBottom="10dp"
              app:layout_constraintTop_toTopOf="@id/explore_viewholder_comment_btn"
              app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_comment_btn"
              android:id="@+id/explore_viewholder_seen_count"
              android:layout_marginEnd="10dp"
              app:layout_constraintTop_toBottomOf="@id/event_poster_container"
              app:layout_constraintEnd_toStartOf="@id/explore_viewholder_comment_btn"
              android:layout_height="wrap_content"/>

    <ImageButton android:layout_width="wrap_content"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:id="@+id/explore_viewholder_comment_btn"
                 android:layout_marginTop="15dp"
                 android:layout_marginBottom="10dp"
                 app:layout_constraintTop_toBottomOf="@id/event_poster_container"
                 app:layout_constraintEnd_toStartOf="@id/explore_viewholder_comment_count"
                 android:layout_marginEnd="10dp"
                 app:srcCompat="@drawable/ic_comment"
                 android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:gravity="center_vertical"
              android:layout_marginTop="7dp"
              android:layout_marginBottom="10dp"
              app:layout_constraintTop_toTopOf="@id/explore_viewholder_comment_btn"
              app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_comment_btn"
              android:id="@+id/explore_viewholder_comment_count"
              android:layout_marginEnd="5dp"
              app:layout_constraintTop_toBottomOf="@id/event_poster_container"
              app:layout_constraintEnd_toStartOf="@id/explore_viewholder_going_btn"
              android:layout_height="wrap_content"/>

            <ImageButton android:layout_width="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/explore_viewholder_going_btn"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                     app:layout_constraintTop_toBottomOf="@id/event_poster_container"
                     app:layout_constraintEnd_toStartOf="@id/explore_viewholder_going_count"
                     android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_going"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="10dp"
                      app:layout_constraintTop_toTopOf="@id/explore_viewholder_going_btn"
                      app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_going_btn"
                      android:layout_marginEnd="7dp"
                      android:id="@+id/explore_viewholder_going_count"
                      app:layout_constraintTop_toBottomOf="@id/event_poster_container"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginEnd="10dp"
                      android:id="@+id/explore_viewholder_event_title"
                      android:title="The Title of this event is legendary!!"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginTop="7dp"
                      app:layout_constraintTop_toBottomOf="@id/explore_viewholder_going_btn"
                      android:textStyle="bold"
                      android:textSize="22sp"
                      android:layout_height="wrap_content"

            />

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_maps"
                        android:id="@+id/explore_viewholder_location_image"
                        app:layout_constraintTop_toTopOf="@id/explore_viewholder_event_location"
                        app:layout_constraintBottom_toBottomOf="@id/explore_viewholder_event_location"
                        app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView android:layout_width="wrap_content"
                          android:layout_marginEnd="15dp"
                          android:minWidth="300dp"
                          android:layout_marginStart="5dp"
                          android:text="Party Avenue!!"
                          app:layout_constraintStart_toEndOf="@id/explore_viewholder_location_image"
                          android:layout_marginTop="15dp"
                          android:layout_gravity="center_vertical"
                          android:id="@+id/explore_viewholder_event_location"
                          android:gravity="center_vertical"
                          app:layout_constraintTop_toBottomOf="@id/explore_viewholder_event_title"
                          android:layout_height="wrap_content"

                />

                <TextView android:layout_width="match_parent"
                          android:text="@string/see_directions"
                          android:layout_marginEnd="5dp"
                          android:layout_marginTop="3dp"
                          
                          app:layout_constraintTop_toBottomOf="@id/explore_viewholder_event_location"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:paddingStart="15dp"
                          android:background="?attr/selectableItemBackground"
                          android:gravity="end"
                          android:id="@+id/explore_viewholder_event_location_see_directions"
                          android:paddingEnd="15dp"
                          android:textColor="@color/colorAccent"
                          android:layout_height="wrap_content"/>





                <TextView android:layout_width="wrap_content"
                          android:id="@+id/explore_viewholder_event_date"
                          android:drawableStart="@drawable/ic_time2"
                          android:gravity="center_vertical"
                          app:layout_constraintStart_toStartOf="parent"
                          android:drawablePadding="5dp"
                          android:layout_marginTop="10dp"
                          app:layout_constraintTop_toBottomOf="@id/explore_viewholder_event_location_see_directions"
                          android:layout_marginEnd="10dp"
                          android:layout_height="wrap_content"

                />



            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/explore_viewholder_event_date"
                    android:id="@+id/explore_viewholder_tags_recycler"
                    android:layout_height="35dp"/>

            <TextView android:layout_width="match_parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/explore_viewholder_view_full_details_tv"
                      android:background="?attr/selectableItemBackground"
                      android:layout_gravity="center"
                      android:textColor="@color/colorAccent"
                      android:gravity="end"
                      android:textStyle="italic"
                      app:layout_constraintTop_toBottomOf="@id/explore_viewholder_tags_recycler"
                      android:layout_marginTop="5dp"
                      android:text="@string/full_details"
                      android:paddingTop="5dp"
                      android:paddingEnd="15dp"
                      android:paddingBottom="5dp"
                      android:layout_marginBottom="15dp"
                      android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>

