<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<android.support.v4.widget.NestedScrollView
			android:layout_width="match_parent"
            android:background="@color/colorPrimary"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:layout_height="wrap_content">

		<LinearLayout

				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<EditText android:layout_width="match_parent"
						  android:layout_height="wrap_content"
						  android:textSize="17sp"
						  android:hint="Email Address"
						  android:fontFamily="@font/font_family"
						  android:inputType="textEmailAddress"
						  android:backgroundTint="@color/colorAccent"
						  android:textColor="#000"
						  android:id="@+id/fragment_signup_email"

				/>

			</android.support.design.widget.TextInputLayout>



			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<EditText android:layout_width="match_parent"
						  android:layout_height="wrap_content"
						  android:textSize="17sp"
						  android:fontFamily="@font/font_family"
						  android:id="@+id/fragment_signup_passsword"
						  android:hint="Password"
						  android:inputType="textPassword"
						  android:backgroundTint="@color/colorAccent"
						  android:textColor="#000"/>

			</android.support.design.widget.TextInputLayout>



			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<EditText android:layout_width="match_parent"
						  android:layout_height="wrap_content"
						  android:textSize="17sp"
						  android:id="@+id/fragment_signup_confam_passsword"
						  android:hint="Confirm Password"
						  android:fontFamily="@font/font_family"
						  android:inputType="textPassword"
						  android:backgroundTint="@color/colorAccent"
						  android:textColor="#000"/>

			</android.support.design.widget.TextInputLayout>



			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
			>
				<EditText android:layout_width="match_parent"
						  android:layout_height="wrap_content"
						  android:textSize="17sp"
						  android:fontFamily="@font/font_family"
						  android:backgroundTint="@color/colorAccent"
						  android:textColor="#000"
						  android:id="@+id/fragment_signup_bio"
						  android:hint="Bio"

				/>


			</android.support.design.widget.TextInputLayout>


			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:visibility="gone"
					android:layout_height="wrap_content">

				<EditText android:layout_width="match_parent"
						  android:layout_height="40dp"
						  android:hint="Tag subjects you are interested in"
						  android:textColor="#000"
						  android:backgroundTint="@color/colorAccent"
						  android:id="@+id/fragment_signup_tags"
				/>

			</android.support.design.widget.TextInputLayout>



			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
			>



				<EditText android:layout_width="match_parent"
						  android:layout_height="wrap_content"
						  android:textSize="17sp"
						  android:hint="Username"
						  android:fontFamily="@font/font_family"
						  android:textColor="#000"
						  android:backgroundTint="@color/colorAccent"
						  android:id="@+id/fragment_signup_username"
				/>		</android.support.design.widget.TextInputLayout>





			<Button android:layout_width="match_parent"
					android:layout_height="40dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					android:id="@+id/fragment_signup_button"
					android:background="@drawable/buttonbg"
					android:text="SIGN UP"
					android:textColor="#fff"
					app:layout_constraintTop_toBottomOf="@id/fragment_signup_tags"
					android:layout_marginTop="30dp"
					android:layout_marginBottom="20dp"
			/>

		</LinearLayout>

	</android.support.v4.widget.NestedScrollView>



</layout>
