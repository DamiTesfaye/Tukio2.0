<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/guest_viewholder_label"
                   app:srcCompat="@drawable/ic_person_black_24dp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="0dp"
                  android:layout_marginStart="10dp"
                  android:textSize="15sp"
                  android:text=""
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:id="@+id/guest_viewholder_name"
                  app:layout_constraintStart_toEndOf="@id/guest_viewholder_label"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="0dp"
                  android:layout_marginStart="10dp"
                  android:textSize="12sp"
                  app:layout_constraintTop_toBottomOf="@id/guest_viewholder_name"
                  android:textStyle="italic"
                  android:text=""
                  android:textColor="@android:color/darker_gray"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/guest_viewholder_bio"
                  app:layout_constraintStart_toEndOf="@id/guest_viewholder_label"
                  android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>