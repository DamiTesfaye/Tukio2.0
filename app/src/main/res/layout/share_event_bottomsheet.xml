<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/bottomsheet_top"
                    android:layout_height="wrap_content">

        <View android:layout_width="200dp"
              android:background="@drawable/buttonbg"
              android:layout_marginTop="5dp"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="10dp"
              android:id="@+id/profile_opt_bsheet_sep"
              android:layout_height="5dp"/>

        <ImageButton android:layout_width="35dp"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="10dp"
                     android:id="@+id/profile_opt_bsheet_close"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:srcCompat="@drawable/ic_close_black_24dp"
                     android:layout_height="35dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:textSize="20sp"
                  android:layout_toEndOf="@id/profile_opt_bsheet_close"
                  android:textStyle="bold"
                  android:layout_marginBottom="30dp"
                  android:layout_below="@id/profile_opt_bsheet_sep"
                  android:id="@+id/profile_opt_bsheet_label"
                  android:textColor="@android:color/black"
                  android:text="Edit Profile"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:id="@+id/profile_opt_bsheet_edit_profile"
                      android:background="?attr/selectableItemBackground"
                      android:layout_height="50dp">

            <ImageView android:layout_width="wrap_content"
                       app:srcCompat="@drawable/ic_edit"
                       android:tint="@android:color/black"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="Edit Profile"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:id="@+id/profile_opt_bsheet_change_interests"
                      android:background="?attr/selectableItemBackground"
                      android:layout_height="50dp">

            <ImageView android:layout_width="wrap_content"
                       app:srcCompat="@drawable/ic_settings_black_24dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="Change Interests"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:id="@+id/profile_opt_bsheet_signout"
                      android:background="?attr/selectableItemBackground"
                      android:layout_height="50dp">

            <ImageView android:layout_width="wrap_content"
                       app:srcCompat="@drawable/ic_sign_out"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="Sign Out"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginBottom="?attr/actionBarSize"
                      android:id="@+id/profile_opt_bsheet_about_us"
                      android:background="?attr/selectableItemBackground"
                      android:layout_height="50dp">

            <ImageView android:layout_width="wrap_content"
                       app:srcCompat="@drawable/ic_info"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       android:tint="@android:color/black"
                       android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="About Us"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>