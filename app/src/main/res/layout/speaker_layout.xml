<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:id="@+id/speaker_icon"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_default_user"
                android:layout_gravity="top"
                android:layout_height="25dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:id="@+id/speaker_layout_name_tv"
                      app:layout_constraintStart_toEndOf="@id/speaker_icon"
                      android:textStyle="bold"
                      android:textSize="17sp"
                      android:layout_marginStart="10dp"
                      app:layout_constraintTop_toTopOf="@id/speaker_icon"
                      android:textColor="@android:color/black"
                      android:text="Prosper Otemuyiwa"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="3dp"
                      android:layout_gravity="center_vertical"
                      android:textSize="15sp"
                      android:layout_marginBottom="5dp"
                      android:id="@+id/speaker_layout_bio_tv"
                      app:layout_constraintStart_toStartOf="@id/speaker_layout_name_tv"
                      app:layout_constraintTop_toBottomOf="@id/speaker_layout_name_tv"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:textColor="@android:color/black"
                      android:text="Graph Ql Master. Developer Advocat."
                      android:layout_height="wrap_content"/>




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
