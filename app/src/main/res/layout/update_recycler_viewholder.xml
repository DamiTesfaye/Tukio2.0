<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="3dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="30dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/notification_label"
                   android:tint="@color/colorAccent"
                   app:srcCompat="@drawable/ic_notification"
                   android:layout_height="30dp"/>

        <TextView android:layout_width="wrap_content"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_marginStart="10dp"
                  android:id="@+id/update_viewholder_update_tv"
                  app:layout_constraintTop_toTopOf="parent"
                  android:paddingEnd="10dp"
                  android:paddingStart="2dp"
                  app:layout_constraintStart_toEndOf="@id/notification_label"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/notification_label"
                  app:layout_constraintTop_toBottomOf="@id/update_viewholder_update_tv"
                  android:id="@+id/update_viewholder_update_desc_tv"
                  android:layout_marginStart="10dp"
                  android:paddingEnd="10dp"
                  android:paddingStart="2dp"
                  android:layout_height="wrap_content"/>
    
        <TextView android:layout_width="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/update_viewholder_update_desc_tv"
                  android:id="@+id/update_viewholder_update_event_tv"
                  android:layout_marginStart="10dp"
                  android:text=""
                  android:textColor="@android:color/darker_gray"
                  android:paddingEnd="10dp"
                  android:textStyle="italic"
                  android:visibility="gone"
                  android:layout_marginBottom="3dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:paddingStart="2dp"
                  android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>